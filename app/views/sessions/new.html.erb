<%= provide(:title, "Sign up") %>

<div class="row size ">
  <div class="col"></div>
    <div class="col-md-6 ">
      <h1 class="size1 form">Войти</h1>
      <%= form_for(:session, url: login_path) do |f|%>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label "Пороль" %>
        <%= f.password_field :password, class: "form-control" %>

      <%= f.submit "Войти", class: "btn size", style: "background-color: #d4beb0;" %>

      <p class="size2">Новый пользователь? <%= link_to "Зарегистрируйтесь!", signup_path %></p>
    <% end %>
  </div>
  <div class="col"></div>
</div>